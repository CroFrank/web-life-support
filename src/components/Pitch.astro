---
import { features } from "../utils/data"
import Feature from "./Feature.astro"
---

<section
  class="py-20 fixed-bg bg-fixed bg-cover bg-center h-full flex flex-col items-center"
>
  <div class="space-y-10 md:sapce-y-12">
    <div class="text-center max-w-3xl mx-auto space-y-4">
      <h2 class="text-white">{"Å to nudimo".toUpperCase()}</h2>
      <p class="text-white">
        Lorem ipsum dolor sit amet consectetur adipisicing elit.
      </p>
    </div>
    <div class="grid lg:grid-cols-2 2xl:grid-cols-3 gap-2 place-items-center">
      {
        features.map((service: FeaturesProps) => {
          return (
            <Feature
              title={service.title}
              description={service.description}
              icon={service.icon}
            />
          )
        })
      }
    </div>
  </div>
</section>

